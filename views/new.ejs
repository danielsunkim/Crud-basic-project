<% include ./partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header">Create a new user!</div>
  <!-- ui form gives it that nice form shape -->
  <form class="ui form" action="/user" method="POST">
    <!-- field gives it the display block -->
    <div class="field">
      <label>Name</label>
      <!-- input name gives is put into the req.body.user since we named it user -->
      <input type="text" min="2" maxlength="10" name="user[name]" placeholder="Enter your name" required>
    </div>
    <div class="field">
      <label>Age</label>
      <input type="number" name="user[age]" placeholder="Enter your age" required max="5">
    </div>
    <div class="field">
      <label>Email</label>
      <input type="email" name="user[email]" maxlength="25" placeholder="Enter your email" required>
    </div>
    <div class="field">
      <!-- gives it a nice round blue button -->
      <input class="ui blue basic button" type="submit">
    </div>
  </form>
</div>

<% include ./partials/footer %>
